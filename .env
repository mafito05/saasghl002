# .env (Versión Oficial y Completa)

# --- Configuración para nuestro Backend FastAPI ---
# Apunta al puerto 5434 que definimos en docker-compose.yml
DATABASE_URL="postgresql://evolution_user:evolution_password@postgres:5434/evolution"

# --- Configuración para Evolution API ---
# API Key para proteger tu instancia de Evolution
AUTHENTICATION_API_KEY=MiApiKeySecretaParaPruebas

# Webhook para que Evolution notifique a nuestro backend Python
# Usamos host.docker.internal para que el contenedor se comunique con nuestra PC
WEBHOOK_URL="https://webhook.site/662d7a05-5018-4ffa-b85c-ca390b3ebf10"

# --- Configuración de la Base de Datos para Evolution ---
# Nombres exactos de la documentación oficial
POSTGRES_USER=evolution_user
POSTGRES_PASSWORD=evolution_password
POSTGRES_DB=evolution

DATABASE_ENABLED=true
DATABASE_PROVIDER=postgresql # Nombre corregido
DATABASE_CONNECTION_URI="postgresql://evolution_user:evolution_password@postgres:5432/evolution"

# --- Configuración de Redis para Evolution ---
CACHE_REDIS_ENABLED=true
CACHE_REDIS_URI=redis://redis:6379
# --- Configuración para la Seguridad (JWT) ---
# Puedes generar una clave compleja en https://www.lastpass.com/features/password-generator
SECRET_KEY=e8f4b0b1e4c3d3a2b1a0c9d8e7f6a5b4c3d2e1f0a9b8c7d6e5f4a3b2c1d0e9f8
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
# 👇 AÑADE ESTA LÍNEA NUEVA
CONFIG_SESSION_PHONE_VERSION=2.3000.1023204200